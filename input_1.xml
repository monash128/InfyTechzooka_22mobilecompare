<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validity?"
        android:textSize="30dp"
        android:id="@+id/textView_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinner_3"
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_alignBottom="@+id/textView_3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Data Usage?"
        android:textSize="30dp"
        android:layout_below="@+id/textView_1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:id="@+id/textView_2" />

    <Spinner
        android:id="@+id/spinner_2"
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/textView_1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="SMS?"
        android:textSize="30dp"
        android:id="@+id/textView_3"
        android:layout_marginTop="134dp"
        android:layout_below="@+id/textView_2"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="left"

        android:id="@+id/spinner_1"
        android:layout_alignBottom="@+id/textView_2"
        android:layout_alignParentEnd="true"
        android:indeterminate="false"
        android:layout_alignStart="@+id/spinner_3" />


    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/confirm_btn"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voice"
        android:textSize="30dp"
        android:id="@+id/textView_4"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/textView_2"
        android:layout_alignParentStart="true" />


</RelativeLayout>